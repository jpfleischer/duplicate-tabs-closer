{
  "manifest_version": 3,
  "name": "DupTabX",
  "version": "1.0.1",
  "author": "jpfleischer",
  "homepage_url": "https://github.com/jpfleischer/duplicate-tabs-closer/",
  "default_locale": "en",
  "description": "The best way to manage duplicate tabs.",

  "action": {
    "default_title": "Duplicate Tabs Closer",
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "images/auto_close_16.png",
      "32": "images/auto_close_32.png"
    }
  },

  "icons": {
    "16": "images/auto_close_16.png",
    "32": "images/auto_close_32.png"
    
  },

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "permissions": ["tabs", "storage", "webNavigation"],

  "options_ui": {
    "page": "optionPage/optionPage.html",
    "open_in_tab": true
  },

  "commands": {
    "close-duplicate-tabs": {
      "suggested_key": { "default": "Alt+Shift+W" },
      "description": "Close all duplicate tabs"
    },
    "toggle-close-automatically": {
      "suggested_key": { "default": "Alt+Shift+D" },
      "description": "Toggle close automatically"
    }
  }
}
